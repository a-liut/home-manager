<resources>

    <!-- Base application theme. -->
    <style name="HomeManager" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorTextOnPrimary</item>

        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryDark</item>
        <item name="colorOnSecondary">@color/colorTextOnSecondary</item>

        <item name="colorError">#a12</item>
        <item name="colorOnError">#fff</item>

        <item name="android:statusBarColor">?colorPrimary</item>
    </style>

    <style name="TextAppearance.HomeManager.Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/colorTextOnPrimary</item>
    </style>

    <style name="TextAppearance.HomeManager.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/colorTextOnPrimary</item>
    </style>

    <style name="TextAppearance.HomeManager.Title.Collapsed" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/colorTextOnPrimary</item>
    </style>

    <style name="TextAppearance.HomeManager.Subtitle.Collapsed" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/colorTextOnPrimary</item>
    </style>

    <style name="Widget.HomeManager.ListHeader" parent="Widget.MaterialComponents.TextView">
        <item name="android:padding">5dp</item>
    </style>
</resources>
